<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="20251401-2_create_table_requisites" author="i.makhorin">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="requisites"/>
            </not>
        </preConditions>

        <createTable tableName="requisites">
            <column name="id" type="INTEGER">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_number" type="NUMERIC(30)">
                <constraints nullable="false"/>
            </column>
            <column name="bik" type="NUMERIC(10)">
                <constraints nullable="false"/>
            </column>
            <column name="correspondent_check" type="NUMERIC(20)">
                <constraints nullable="false"/>
            </column>
            <column name="inn" type="NUMERIC(10)">
                <constraints nullable="false"/>
            </column>
            <column name="kpp" type="NUMERIC(9)">
                <constraints nullable="false"/>
            </column>
            <column name="kbk" type="NUMERIC(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="requisites" baseColumnNames="user_id"
                referencedTableName="user" referencedColumnNames="id"
                constraintName="fk_requisites_user"/>
    </changeSet>

</databaseChangeLog>